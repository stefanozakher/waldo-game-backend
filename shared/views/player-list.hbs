<div class="card player-list-card">
    <div class="card-header d-md-block d-none" id="playerListHeader">
        <button class="btn btn-link w-100 text-left d-flex justify-content-between align-items-center" type="button"
            data-bs-toggle="collapse" data-bs-target="#playerListContent" aria-expanded="true"
            aria-controls="playerListContent">
            Players ({{players.length}})
            <i class="bi bi-chevron-down"></i>
        </button>
    </div>
    <div id="playerListContent" class="collapse show" aria-labelledby="playerListHeader">
        <div class="card-body p-2">
            <ul class="list-unstyled mb-0">
                {{#each players}}
                <li class="d-flex align-items-center p-2 rounded hover-bg-light" data-player-id="{{this.playerId}}"
                    data-player-name="{{this.playerName}}" data-player-status="{{this.status}}">
                    <div class="position-relative">
                        <img src="https://api.dicebear.com/6.x/avataaars/svg?seed={{this.playerName}}"
                            alt="{{this.playerName}}'s avatar" class="rounded-circle" width="32" height="32">
                        <span
                            class="position-absolute bottom-0 end-0 p-1 rounded-circle status-indicator status-{{this.status}}"></span>
                    </div>
                    <div class="ms-2 flex-grow-1 min-width-0">
                        <p class="mb-0 text-truncate player-name">{{this.playerName}}</p>
                        <small class="text-muted player-status">{{this.status}}</small>
                    </div>
                    <span class="badge bg-warning text-dark font-monospace">100 pts</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>