<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Chat</h5>
    </div>
    <div id="chatMessages" class="card-body overflow-auto">
        <!-- Chat messages will be inserted here -->
    </div>
    <div class="card-footer">
        <div class="input-group">
            <input id="messageInput" type="text" class="form-control" placeholder="Type your message..." required>
            <button id="sendMessage" type="submit" class="btn btn-primary">Send</button>
        </div>
    </div>
</div>

<script id="message-template" type="text/x-handlebars-template">
    <%- include('../../shared/views/message.hbs') %>
</script>